
{% extends 'base.html.twig' %}

{% block body %}
     <h1></h1>
    <div >
       
        	{% for post in posts %}
            <div class="row">
		        <div class="col s12 m7">
		          <div class="card">
		            <div class="card-image">
		              <img src="{{ post.image }}">
		              <span class="card-title">{{ post.title }}</span>
		            </div>
		            <div class="card-content">
		              <p>
		              	{{ post.description |truncate(150) }}<br><br>
		              	<div><span><b>créé le : </b> {% if post.createdAt %}{{ post.createdAt|date('d-m-Y à H:i:s') }}{% endif %} par {{post.user}}</span></div>
		              </p>
		            </div>
		            <div class="card-action">
		              <a href="{{ path('blog_blog_single', { 'id': post.id }) }}"> <button class="btn waves-effect waves-light">voir plus</button></a>
		            </div>
		          </div>
		        </div>
		      </div>
          	{% endfor %}
  	  		</div>	
		{% endblock %}
